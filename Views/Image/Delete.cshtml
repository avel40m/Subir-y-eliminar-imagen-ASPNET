@model Image.Models.ImageModel

@{
    ViewData["Title"] = "Eliminar";
}

<h3>¿Desea eliminar el usuario?</h3>

<div>
    <h4>Usuario número @Model.ImageId</h4>
    <hr>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageName)
        </dd>
        <dt class="col-sm-2">
            Imagen del usuario
        </dt>
        <dd class="col-sm-10">
            <img src="/Image/@Model.ImageName" asp-append-version="true" width="100px" height="100px">
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ImageId">
        <input type="submit" value="Eliminar" class="btn btn-danger">
        <br>
        <a asp-action="Index">Volver al menu</a>
    </form>
</div>